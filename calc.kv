BoxLayout:
	orientation: 'vertical'
	TextInput:
		id: ci
		multiline: False
		font_size: self.width/13
	BoxLayout:
		orientation: 'horizontal'
		Button:
			text: '7'
			on_press: ci.text+=self.text
			font_size: self.width/6
		Button:
			text: '8'
			on_press: ci.text+=self.text
			font_size: self.width/6
		Button:
			text: '9'
			on_press: ci.text+=self.text
			font_size: self.width/6
		Button:
			text: '*'
			on_press: ci.text+=self.text
			font_size: self.width/6
	BoxLayout:
		Button:
			text: '4'
			on_press: ci.text+=self.text
			font_size: self.width/6
		Button:
			text: '5'
			on_press: ci.text+=self.text
			font_size: self.width/6
		Button:
			text: '6'
			on_press: ci.text+=self.text
			font_size: self.width/6
		Button:
			text: '/'
			on_press: ci.text+=self.text
			font_size: self.width/6
	BoxLayout:
		Button:
			text: '1'
			on_press: ci.text+=self.text
			font_size: self.width/6
		Button:
			text: '2'
			on_press: ci.text+=self.text
			font_size: self.width/6
		Button:
			text: '3'
			on_press: ci.text+=self.text
			font_size: self.width/6
		Button:
			text: '+'
			on_press: ci.text+=self.text
			font_size: self.width/6
	BoxLayout:
		Button:
			text: '('
			on_press: ci.text+=self.text
			font_size: self.width/6
		Button:
			text: '0'
			on_press: ci.text+=self.text
			font_size: self.width/6
		Button:
			text: ')'
			on_press: ci.text+=self.text
			font_size: self.width/6
		Button:
			text: '-'
			on_press: ci.text+=self.text
			font_size: self.width/6
	BoxLayout:
		Button:
			text: '<<<'
			on_press: ci.text=ci.text[:-1]
			font_size: self.width/6
		Button:
			text: '.'
			on_press: ci.text+=self.text
			font_size: self.width/6
		Button:
			text: 'C'
			on_press: ci.text=''
			font_size: self.width/6
	Button:
		text: '='
		on_press: ci.text=app.calculate(ci.text)
		font_size: self.width/6